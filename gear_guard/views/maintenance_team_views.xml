<odoo>
    <record id="view_gear_maintenance_team_list" model="ir.ui.view">
        <field name="name">gear.maintenance.team.list</field>
        <field name="model">gear.maintenance.team</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="leader_id"/>
            </list>
        </field>
    </record>

    <record id="view_gear_maintenance_team_form" model="ir.ui.view">
        <field name="name">gear.maintenance.team.form</field>
        <field name="model">gear.maintenance.team</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="leader_id"/>
                        <field name="member_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gear_maintenance_team" model="ir.actions.act_window">
        <field name="name">Maintenance Teams</field>
        <field name="res_model">gear.maintenance.team</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>
