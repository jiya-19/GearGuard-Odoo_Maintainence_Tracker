<odoo>
    <record id="action_gear_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">gear.equipment</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_gear_equipment_form" model="ir.ui.view">
        <field name="name">gear.equipment.form</field>
        <field name="model">gear.equipment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="serial_number"/>
                        <field name="purchase_date"/>
                        <field name="warranty"/>
                        <field name="location"/>
                        <field name="team_id"/>
                    </group>
                </sheet>
                <footer>
                    <button name="open_maintenance_requests"
                            type="object" class="oe_stat_button"
                            icon="fa-wrench">
                        <field name="maintenance_count" widget="statinfo"/>
                    </button>
                </footer>
            </form>
        </field>
    </record>
</odoo>
